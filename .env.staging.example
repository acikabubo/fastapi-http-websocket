# Staging Environment Configuration
# Copy this file to .env for staging deployment
# Update all CHANGE_ME values before deployment

# ============================================
# ENVIRONMENT
# ============================================
ENV=staging

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_USER=staging_user
DB_PASSWORD=CHANGE_ME  # Generate with: openssl rand -base64 32
DB_HOST=hw-db
DB_PORT=5432
DB_NAME=hwdb_staging

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_IP=hw-redis
REDIS_PORT=6379
# REDIS_PASSWORD=CHANGE_ME  # Enable Redis auth in staging

# ============================================
# KEYCLOAK CONFIGURATION
# ============================================
KEYCLOAK_REALM=staging
KEYCLOAK_CLIENT_ID=fastapi-app-staging
KEYCLOAK_CLIENT_SECRET=CHANGE_ME  # Get from Keycloak admin
KEYCLOAK_BASE_URL=https://auth-staging.example.com
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=CHANGE_ME

# ============================================
# SECURITY
# ============================================
DEBUG_AUTH=false  # Never enable in staging/production
ALLOWED_HOSTS=["api-staging.example.com"]

# ============================================
# LOGGING (Staging defaults)
# ============================================
# LOG_LEVEL=INFO  # Moderate logging for staging
# LOG_CONSOLE_FORMAT=json  # JSON for Grafana Alloy collection

# ============================================
# RATE LIMITING (Staging defaults)
# ============================================
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_PER_MINUTE=60
# RATE_LIMIT_FAIL_MODE=open  # Fail open for staging

# ============================================
# PROFILING (Staging defaults)
# ============================================
# PROFILING_ENABLED=true  # Enable for performance testing
