{
    "version": 1,
    "disable_existing_loggers": false,
    "filters": {
        "exclude_metrics": {
            "()": "uvicorn_filters.ExcludeMetricsFilter"
        }
    },
    "formatters": {
        "json": {
            "()": "app.logging.StructuredJSONFormatter"
        }
    },
    "handlers": {
        "access": {
            "formatter": "json",
            "class": "logging.StreamHandler",
            "stream": "ext://sys.stdout",
            "filters": ["exclude_metrics"]
        }
    },
    "loggers": {
        "uvicorn.access": {
            "level": "INFO",
            "handlers": [],
            "propagate": true
        },
        "uvicorn.error": {
            "level": "INFO",
            "handlers": [],
            "propagate": true
        }
    }
}
